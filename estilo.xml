<?xml version="1.0" encoding="UTF-8"?>
<StyledLayerDescriptor xmlns="http://www.opengis.net/sld" xmlns:ogc="http://www.opengis.net/ogc" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="1.0.0" xsi:schemaLocation="http://www.opengis.net/sld StyledLayerDescriptor.xsd">
	<NamedLayer>
		<Name>Optimized and styled label</Name>
		<UserStyle>
			<Title>SLD Cook Book: Optimized and styled label</Title>
			<FeatureTypeStyle>
				<Rule>
                  <!--<MaxScaleDenominator>15000</MaxScaleDenominator> -->
					<LineSymbolizer>
						<Stroke>
						<CssParameter name="stroke">#1BD9FF</CssParameter>
                          <CssParameter name="stroke-width">2</CssParameter>
                          <CssParameter name="stroke-dasharray">8 6</CssParameter>
                          <CssParameter name="stroke-opacity">1.00</CssParameter>
						</Stroke>
					</LineSymbolizer>
					<TextSymbolizer>
						<Label>
                          	<ogc:PropertyName>clave_vialidad</ogc:PropertyName>
							<ogc:PropertyName>nombre_completo_vialidad</ogc:PropertyName>
						</Label>
                      	<Font>
							<CssParameter name="font-family">Arial</CssParameter>
							<CssParameter name="font-size">10</CssParameter>
							<CssParameter name="font-style">normal</CssParameter>
                            <CssParameter name="font-weight">bold</CssParameter>
						</Font>
                      	<Halo>
                           <Radius>2</Radius>
                           <Fill>
                             <CssParameter name="fill">#1BD9FF</CssParameter>
                           </Fill>
                         </Halo>
						<Fill>
							<CssParameter name="fill">#1BD9FF</CssParameter>
						</Fill>
						<VendorOption name="followLine">true</VendorOption>
						<VendorOption name="maxAngleDelta">90</VendorOption>
						<VendorOption name="maxDisplacement">400</VendorOption>
						<VendorOption name="repeat">150</VendorOption>
					</TextSymbolizer>
				</Rule>
			</FeatureTypeStyle>
		</UserStyle>
	</NamedLayer>
</StyledLayerDescriptor>
